<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Gym Logo -->
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/altifit"
                android:layout_gravity="center"
                android:contentDescription="Gym Logo" />

            <!-- Workout Categories -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altifit Categories"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>

            <!-- Horizontal ScrollView for Workout Categories -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Workout Category Items ( -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#740A00"
                        android:textSize="12sp"
                        android:text="Cardio"
                        android:textColor="#FFFFFF"
                        style="?android:attr/buttonBarButtonStyle" />

                    <Button
                        android:id="@+id/cat_cardio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#740A00"
                        android:textSize="12sp"
                        android:text="Nutrition"
                        android:textColor="#FFFFFF"
                        style="?android:attr/buttonBarButtonStyle" />

                    <Button
                        android:id="@+id/cat_weightloss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#740A00"
                        android:textSize="12sp"
                        android:backgroundTint="#740A00"
                        android:text="Weight Loss"
                        android:textColor="#FFFFFF"
                        style="?android:attr/buttonBarButtonStyle" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#740A00"
                        android:textSize="12sp"
                        android:text="Bodybuilding"
                        android:textColor="#FFFFFF"
                        style="?android:attr/buttonBarButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="#740A00"
                        android:textSize="12sp"
                        android:text="Agility Training"
                        android:textColor="#FFFFFF"
                        style="?android:attr/buttonBarButtonStyle" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Image Gallery for New Workouts -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutorials"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Workout Category 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/stretching"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Workout Image 1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/workout_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stretching"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <!-- Workout Category 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/deadlift"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/workout_2"
                        android:scaleType="centerCrop"
                        android:contentDescription="Workout Image 2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proper Deadlift"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Workout Category 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/agility"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/workout_3"
                        android:scaleType="centerCrop"
                        android:contentDescription="Workout Image 3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agility"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <!-- Workout Category 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/curl"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/workout_4"
                        android:scaleType="centerCrop"
                        android:contentDescription="Workout Image 4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proper Curl"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Workout Category 5 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/calisthenic"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/workout_5"
                        android:scaleType="centerCrop"
                        android:contentDescription="Workout Image 3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calisthenics 101"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <!-- Workout Category 6 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/bench"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/workout_6"
                        android:scaleType="centerCrop"
                        android:contentDescription="Workout Image 4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Benchpress"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>




